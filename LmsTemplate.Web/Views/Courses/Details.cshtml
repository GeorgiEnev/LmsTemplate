@model LmsTemplate.Application.Dtos.Courses.CourseDto

@{
    ViewData["Title"] = "Course Details";
}

<h1>Course Details</h1>

<div class="card">
    <div class="card-body">

        <h3>@Model.Title</h3>

        <p><strong>Code:</strong> @Model.Code</p>
        <p><strong>Description:</strong> @Model.Description</p>

        <p>
            <strong>Status:</strong>
            @if (Model.IsActive)
            {
                <span class="text-success">Active</span>
            }
            else
            {
                <span class="text-danger">Inactive</span>
            }
        </p>

        <form asp-action="ToggleStatus" asp-route-id="@Model.Id" method="post" style="display:inline;">
            <button type="submit" class="btn @(Model.IsActive ? "btn-danger" : "btn-success")">
                @(Model.IsActive ? "Deactivate" : "Activate")   
            </button>
        </form>


        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit Course</a>
        <a asp-action="Index" class="btn btn-secondary">Back to Courses</a>
    </div>
</div>
