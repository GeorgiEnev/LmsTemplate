@model IReadOnlyList<LmsTemplate.Application.Dtos.AcademicRoles.AcademicRoleDto>

@{
    ViewData["Title"] = "Academic Roles";
}

<h1>Academic Roles</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Role</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Period</th>
            <th>Term</th>
            <th>Specialty</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Period</td>
                <td>@role.Term</td>
                <td>
                    <a asp-action="Details" asp-route-id="@role.Id">
                        @role.Specialty
                    </a>
                </td>
                <td>@(role.IsActive ? "Yes" : "No")</td>
            </tr>
        }
    </tbody>
</table>
